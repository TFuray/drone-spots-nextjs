generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // relationMode = "prisma"
}

model Spot {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  city        String
  state       String
  latitude    Float
  longitude   Float
  description String   @db.Text
  imageUrl    String
  createdAt   DateTime @default(now())
  updatredAt  DateTime @updatedAt
}

